@model QRCode
@{
    ViewData["Title"] = "Generate QRCode";
}

<h1>Generate QRCode</h1>
<form asp-action="GenerateQRCode" asp-antiforgery="true" asp-controller="Home" autocomplete="off">
    <div class="row">
        <div class="col-md-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <input type="submit" class="btn btn-outline-success" value="Generate Payment Link" />
        </div>
    </div>
</form>